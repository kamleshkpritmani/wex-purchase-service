	"item": [
		{
			"name": "1) Auth â€“ Login and Save Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
							"const json = pm.response.json();",
							"pm.test('Has accessToken', function () { pm.expect(json).to.have.property('token'); });",
							"// Save token at collection scope",
							"pm.collectionVariables.set('token', json.token);",
							"pm.collectionVariables.set('tokenType', json.tokenType || 'Bearer');",
							"pm.test('Token saved to collection variable', function () { pm.expect(pm.collectionVariables.get('token')).to.be.a('string'); });"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"testing1\",\n  \"password\": \"1Abcd123$\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/auth/login",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"auth",
						"login"
					]
				},
				"description": "Logs in (demo endpoint) and stores the Bearer token in the collection variable {{token}}."
			},
			"response": []
		},
