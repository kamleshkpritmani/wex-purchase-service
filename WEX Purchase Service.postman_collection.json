		{
			"name": "3) Create Purchase Transaction",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status is 201 Created', function () { pm.response.to.have.status(201); });",
							"const json = pm.response.json();",
							"pm.test('Has purchase id', function () { pm.expect(json).to.have.property('id'); });",
							"// Save for subsequent requests",
							"pm.collectionVariables.set('purchaseId', json.id);",
							"pm.test('purchaseId saved', function () { pm.expect(pm.collectionVariables.get('purchaseId')).to.be.a('string'); });"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "{{tokenType}} {{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"description\": \"Book Purchase\",\n  \"transactionDate\": \"2025-12-15\",\n  \"purchaseAmountUsd\": 20.0\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/transactions",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"transactions"
					]
				},
				"description": "Creates a new purchase. Requires Authorization: Bearer {{token}}."
			},
			"response": []
		},
		{
			"name": "4) Convert Purchase to Currency",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Ensure defaults for currency",
							"if (!pm.collectionVariables.get('currency')) { pm.collectionVariables.set('currency', 'Euro'); }"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status is 200 or 400 if no rate', function () {",
							"  pm.expect([200,400]).to.include(pm.response.code);",
							"});",
							"if (pm.response.code === 200) {",
							"  const json = pm.response.json();",
							"  pm.test('Converted payload has expected fields', function () {",
							"    ['id','description','transactionDate','targetCurrency','originalAmountUsd','exchangeRateDate','exchangeRateUsed','convertedAmount'].forEach(k => pm.expect(json).to.have.property(k));",
							"  });",
							"} else {",
							"  const json = pm.response.json();",
							"  pm.test('Error message present', function () {",
							"    pm.expect(json).to.have.property('error');",
							"  });",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "{{tokenType}} {{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": []
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/transactions/{{purchaseId}}?currency={{currency}}&purchaseid=f26fa144-626d-497e-94c4-03b68d796806",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"transactions",
						"{{purchaseId}}"
					],
					"query": [
						{
							"key": "currency",
							"value": "{{currency}}"
						},
						{
							"key": "purchaseid",
							"value": "f26fa144-626d-497e-94c4-03b68d796806"
						}
					]
				},
				"description": "Converts the stored purchase ({{purchaseId}}) to a target currency ({{currency}}). Requires Authorization header."
			},
			"response": []
		},
